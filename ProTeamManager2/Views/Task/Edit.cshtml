@model ProTeamManager2.Models.Task

@{
    ViewBag.Title = "Edit";
}

<h2>Edit  @Model.taskName</h2>
<br/>
@using ( Html.BeginForm() )
{
	<fieldset>
		<legend>User Story</legend>

		<div class="editor-label">
			Task Name
		</div>
		<div class="editor-field">
			@Html.TextBoxFor(model => model.taskName)
		</div>
		<br/>

		<div class="editor-label">
			Description
		</div>
		<div class="editor-field">
			@Html.TextBoxFor( model => model.taskDesccription )
		</div>
		<br/>     
		<div class="editor-label">
			Estimated Hours
		</div>
		<div class="editor-field">
			@Html.TextBoxFor( model => model.estimatedHours )
		</div>
		<br/>

        <div class="editor-label">
			Status
		</div>
		<div class="editor-field">
			@Html.TextBoxFor( model => model.taskStatus )
		</div>
		<br/>

		<input type="submit" value="Create" />
		
	</fieldset>
}

