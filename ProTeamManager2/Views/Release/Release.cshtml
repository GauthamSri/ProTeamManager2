@model ProTeamManager2.Models.ReleaseData

@{
    ViewBag.Title = "Release";
}

 <head>
    
  @Styles.Render("~/Content/mystyles")
  @Scripts.Render("~/bundles/mybundle")
  @Scripts.Render("~/bundles/Release.js")
    
    </head>

<div id ="body">

    <div id="tabs">
	<ul>
		<li><a href="#tabs-1">Release</a></li>
	</ul>

        <div id="tabs-1">

             <div> 

            @Html.ActionLink("Create New Release", "Create", "Release")
        </div>

             <table id="assetDetailsNavTable" class="assetDetailsNavTable">
              <thead>
               <tr>
                <th> Release Number</th>
                <th> Sprint Count </th>
                <th> Release Date</th>
                <th> Project Name</th>                              
               </tr>
             </thead>
               <tbody id="tableBody">
                   @if (Model != null)
                   {

                   foreach(var t in Model.allReleases)
                   {
                       
                       if(t!= null)
                       {
             <tr>
             <td><a href="/Sprint/Sprint/@t.Id">Release  @t.releaseNumber</a></td>
             <td>@t.NoOfSprints</td>
             <td>@t.releaseDate</td>
             <td> @t.projectName</td>
            <td>      

             Release Date: <input type="text" id="@t.Id" class="fixwidth">
             <button type="button" onclick="setReleaseDate('@t.Id','@Url.Action("SetReleaseDate", "Release")')">Set</button>
            </td>
             <td>(<a href="/Release/Edit/@t.Id"  style="color: blue;">edit</a>) / (<a href="/Release/Delete/@t.Id"  style="color: blue;">delete</a>)</td>
             </tr>
                       }
                   }
                 }
  
             </tbody>
           </table>


        </div>

    </div>


 </div>
