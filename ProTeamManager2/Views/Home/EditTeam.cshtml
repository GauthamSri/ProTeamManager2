@model ProTeamManager2.Models.TeamModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit @Model.Name</h2>
<br/>
@using ( Html.BeginForm() )
{
	<fieldset>
		<legend>Product</legend>

		<div class="editor-label">
			@Html.LabelFor(model => model.Name)
		</div>
		<div class="editor-field">
			@Html.TextBoxFor(model => model.Name)
		</div>
		<br/>

		<div class="editor-label">
			@Html.LabelFor(model => model.OrganizationName)
		</div>
		<div class="editor-field">
			@Html.TextBoxFor( model => model.OrganizationName )
		</div>
		<br/>

		<div class="editor-label">
				@Html.LabelFor(model => model.DivisionName)
			</div>
        <div class="editor-field">
			@Html.TextBoxFor(model => model.DivisionName)
		</div>
		<br/>
		
		<div class="editor-label">
			@Html.LabelFor(model => model.OwnedBy)
		</div>
		<div class="editor-field">
			@Html.TextBoxFor( model => model.OwnedBy )
		</div>
		<br/>

		<input type="submit" value="Save" />
		
	</fieldset>
}

